<Window x:Class="Otzarnik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Otzarnik"        
        xmlns:otzarnik="clr-namespace:OtzarnikLib.UI;assembly=OtzarnikLib"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        MinWidth="350" MinHeight="450"
        FlowDirection="RightToLeft"
        FontSize="13"
        FontFamily="Tahoma">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/WpfLib;component/Dictionaries/ThemedWindowDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource ThemedWindowStyle}"/>
    </Window.Style>

    <otzarnik:MainView/>
</Window>
